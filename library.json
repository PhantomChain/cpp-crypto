{
  "name": "Phantom-Cpp-Crypto",
  "keywords": "phantom, phantomchain, crypto, blockchain, arduino",
  "description": "Cpp Wrapper for the PhantomChain",
  "homepage": "https://github.com/PhantomChain/Cpp-Crypto",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhantomChain/Cpp-Crypto.git"
  },
  "version": "0.1.0",
  "authors": [
    {
      "name": "Simon Downey",
      "email": "simon@ark.io",
      "url": "https://github.com/sleepdefic1t"
    },
    {
      "name": "Chris Johnson",
      "url": "https://github.com/ciband"
    },
    {
      "name": "supaiku0",
      "url": "https://github.com/supaiku0"
    }
  ],
  "frameworks": "arduino",
  "platforms": "*",
  "dependencies": [
    {
      "name": "micro-ecc"
    },
    {
      "name": "bip39"
    }
  ],
  "export": {
    "include": [
      "src/*"
    ]
  },
  "build": {
    "flags": [
      "-I src/include/cpp-crypto"
    ]
  },
  "examples": [
    "[Ee]xamples/platformio_example/*.ino",
    "[Ee]xamples/platformio_example/*.cpp",
    "[Ee]xamples/platformio_example/*.c"
  ]
}
